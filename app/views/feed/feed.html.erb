<div class="col-xs-12 feed-container">

    <div class="col-xs-6 recipe-scroll">
      <% @recipes.each do |recipe| %>
        <%= link_to recipe_path(recipe), remote: true do%>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<% if recipe.photo %>
                              <%= recipe.photo %>
                          <%  else %>
                            https://images.unsplash.com/photo-1522204605090-c9a2ae146cb3?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=0147eeb73ae17cd12d9f3d9523ba01a6&auto=format&fit=crop&w=2091&q=80
                          <% end %>
                          );">
              <div class="card-category">Recipe</div>
              <div class="card-description">
                  <h2><%= recipe.name%></h2>
                  <p>Total Cooking Time: <%= recipe.total_time%> Minutes</p>
              </div>
              <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
            </div>
        <% end %>
      <% end %>


    </div>

    <div class="col-xs-6 recipe-show">


    </div>
</div>
